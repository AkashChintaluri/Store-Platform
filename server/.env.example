# Environment variables
# MongoDB Atlas Configuration - Single cluster for entire project
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=store_platform

# Future authentication settings (when auth is added)
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Legacy settings (can be removed)
DATABASE_URL=sqlite:///./test.db
SECRET_KEY=your-secret-key-here
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Store URL configuration
# Example local (with port-forward): STORE_BASE_DOMAIN=localhost, STORE_BASE_PORT=8080
# Example production: STORE_BASE_DOMAIN=stores.example.com, STORE_BASE_PORT=
STORE_BASE_DOMAIN=localhost
STORE_BASE_PORT=8080

# Helm values selection
# Set APP_ENV=production to automatically use values-prod.yaml
# Or set STORE_VALUES_FILE to an absolute path for a custom values file
APP_ENV=development
STORE_VALUES_FILE=